{{#paper-toolbar}}
  <h2 class="md-toolbar-tools">
    {{#paper-sidenav-toggle class="menu-sidenav-toggle"}}
      {{paper-icon icon="menu"}}
    {{/paper-sidenav-toggle}}
    <span>Informes</span>
  </h2>
{{/paper-toolbar}}

{{#paper-content classNames="md-padding"}}
  {{#paper-list}}
    {{#paper-item}}
      {{#paper-tile-left}}
        Cartera
      {{/paper-tile-left}}
      {{#paper-tile-content}}
        {{format-money controller.balance}}
      {{/paper-tile-content}}
    {{/paper-item}}
    {{#paper-item}}
      {{#paper-tile-left}}
        Deudores
      {{/paper-tile-left}}
      {{paper-divider}}
      {{#paper-tile-content}}
        {{controller.debtors}}
      {{/paper-tile-content}}
    {{/paper-item}}
  {{/paper-list}}
{{/paper-content}}
