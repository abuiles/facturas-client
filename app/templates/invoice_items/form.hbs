{{#if model.payment}}
  <h3>Nuevo Abono</h3>
{{else}}
  <h3>Nuevo Fiado</h3>
{{/if}}
<div class="row">
  {{input
    value=model.amount
    placeholder="Valor"
    type="number"
    pattern="\d*"
    class="invoice-item-amount"
  }}
  {{input value=model.description placeholder="Descripci√≥n" class="invoice-item-description"}}
</div>
<div class="row">
  <button type="submit" {{action "save"}} class="create button primary">Guardar</button>
  <button type="submit" {{action "cancel"}} class="create button primary dull">Cancelar</button>
</div>
